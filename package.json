{
  "name": "t-state-form",
  "description": "A form library for React",
  "version": "0.27.1",
  "license": "MIT",
  "scripts": {
    "test": "vitest --ui",
    "test:run": "vitest run",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ tests/ --color",
    "eslint:fix": "pnpm eslint --fix",
    "build": "pnpm test:run && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build "
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/t-form",
  "author": "Lucas Santos",
  "type": "module",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.6.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "typescript-eslint": "^8.2.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "@types/eslint__js": "^8.42.3",
    "@lucasols/eslint-plugin-extended-lint": "^1.6.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.1",
    "eslint-plugin-vitest": "^0.5.4",
    "evtmitter": "^0.3.3",
    "happy-dom": "^15.0.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsm": "^2.3.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "t-state": "^9.2.3"
  }
}
