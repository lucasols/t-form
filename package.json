{
  "name": "t-state-form",
  "description": "A form library for React",
  "version": "1.7.0",
  "license": "MIT",
  "scripts": {
    "test:ui": "vitest --ui",
    "test": "vitest run",
    "test:update": "vitest run --update",
    "lint": "pnpm tsc && pnpm eslint",
    "tsc": "tsc -p tsconfig.prod.json",
    "eslint": "CI=true eslint src/ tests/ --color",
    "eslint:fix": "pnpm eslint --fix",
    "build": "pnpm test && pnpm lint && pnpm build:no-test",
    "build:no-test": "tsup --minify --dts",
    "build-test": "tsup --config tsup.test.config.ts",
    "pre-publish": "./scripts/check-if-is-sync.sh && pnpm build "
  },
  "files": [
    "dist"
  ],
  "repository": "github:lucasols/t-form",
  "author": "Lucas Santos",
  "type": "module",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.6.0"
  },
  "devDependencies": {
    "@ls-stack/extended-lint": "^0.44.1",
    "@ls-stack/utils": "^3.12.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.28.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "evtmitter": "^0.3.3",
    "happy-dom": "^18.0.1",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsm": "^2.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "t-state": "^9.4.0"
  }
}
